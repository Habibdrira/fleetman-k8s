pipeline {
    agent any
    
    environment {
        SONAR_HOST_URL = 'http://sonarqube.ci-cd.svc.cluster.local:9000'
        SONAR_TOKEN = credentials('sonar-token')
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Habibdrira/fleetman-k8s.git'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building application...'
                sh 'echo "Compilation du code"'
            }
        }
        
        stage('Unit Tests') {
            steps {
                echo 'Running unit tests...'
                sh 'echo "Tests unitaires"'
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarScanner'
                    withSonarQubeEnv('SonarQube') {
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=fleetman \
                            -Dsonar.sources=. \
                            -Dsonar.host.url=${SONAR_HOST_URL} \
                            -Dsonar.login=${SONAR_TOKEN}
                        """
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker images...'
                sh 'echo "docker build -t fleetman:${BUILD_NUMBER}"'
            }
        }
        
        stage('Push to Registry') {
            steps {
                echo 'Pushing to registry...'
                sh 'echo "docker push fleetman:${BUILD_NUMBER}"'
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                echo 'Deploying to Kubernetes...'
                sh '''
                    kubectl set image deployment/webapp webapp=fleetman:${BUILD_NUMBER}
                    kubectl rollout status deployment/webapp
                '''
            }
        }
    }
    
    post {
        success {
            echo '✅ Pipeline réussi !'
        }
        failure {
            echo '❌ Pipeline échoué !'
        }
    }
}
